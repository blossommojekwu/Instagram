<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailsLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivDetailsProfileIcon"
            android:layout_width="@dimen/profileIcon"
            android:layout_height="@dimen/profileIcon"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tvDetailsUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivDetailsImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image300"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />
    <LinearLayout
        android:id="@+id/interactiveDetailsLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnFavorite"
            android:layout_width="@dimen/interactiveIcons"
            android:layout_height="@dimen/interactiveIcons"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_favorite" />

        <Button
            android:id="@+id/btnComment"
            android:layout_width="@dimen/interactiveIcons"
            android:layout_height="@dimen/interactiveIcons"
            android:layout_marginRight="270dp"
            android:background="@drawable/ic_comment" />

        <Button
            android:layout_width="@dimen/interactiveIcons"
            android:layout_height="@dimen/interactiveIcons"
            android:background="@drawable/ic_bookmark" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDetailsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom= "20dp"/>

    <TextView
        android:id="@+id/tvDetailsTimeStamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4 hours ago"
        android:textSize="16sp"/>
</LinearLayout>